{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },

  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "outDir": "./dist",
    "rootDir": ".",
    "paths": {
      "@/*": ["./src/*", ],
    }
  },

  "exclude": [
    "dist",
    "node_modules"
  ],
  
  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}