{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "strict": true,
    "outDir": "./dist",
    "rootDir": ".",
    "paths": {
      "@/*": ["./*", ],
      "@common/*": ["../common/*", ],
    }
  },
  "exclude": ["node_modules"],
  "references": [
    { "path": "../common" }
  ]
}